{% extends '::base.html.twig' %}
{% block title %}Liste des editeurs{% endblock %}
{% block body %}

<table class="table table-striped table-hover">
	<thead>
		<tr>
			<th>##</th>
			<th>Nom</th>
			<th>Modifier</th>
			<th>Supprimer</th>
		</tr>
	</thead>
	<tbody>
		{% if editions is not empty %}
			{% for edition in editions %}
				<tr>
					<th><a href="{{ path('biblio_general_showedition',{ 'id':edition.id }) }}}">{{ edition.id }}</a></th>
					<td>{{ edition.nom }}</td>
					<th><a href="{{ path('biblio_general_editedition',{ 'id':edition.id }) }}}">Editer</a></th>
					<th><a href="{{ path('biblio_general_deleteedition',{ 'id':edition.id }) }}}">Supprimer</a></th>
				</tr>
			{% endfor %}
		{% endif %}
	</tbody>
</table>

{% endblock %}