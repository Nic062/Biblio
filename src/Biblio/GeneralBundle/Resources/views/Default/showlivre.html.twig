{% extends '::base.html.twig' %}
{% block title %}{{livre.titre}}{% endblock %}
{% block body %}

<p>{{livre.titre}} est un livre écrit en {{livre.annee}} par 

{% if livre.auteurs is not empty %}
    {% for auteur in livre.auteurs %}
      {{ auteur.prenom }} {{ auteur.nom }}{% if not loop.last %}, {% endif %}
    {% endfor %}
{% endif %}

, dont voici le résumé : </p>
<p>{{livre.resume}}</p>

<p>Liste des exemplaires : </p>
<table class="table table-striped table-hover">
	<thead>
		<tr>
			<th>##</th>
			<th>Nom de l'édition</th>
			<th>Disponibilité</th>
			<th>Modifier</th>
			<th>Supprimer</th>
		</tr>
	</thead>
	<tbody>
		{% if livre.exemplaires is not empty %}
			{% for ex in livre.exemplaires %}
				<tr>
					<th>{{ ex.id }}</th>
					<td>{{ ex.edition.nom }}</td>
					<th><a href="{{ path('biblio_general_addemprunt',{ 'idUser':128, 'idExemplaire':ex.id }) }}}">Emprunter!</a></th>
					<th><a href="{{ path('biblio_general_editexemplaire',{ 'id':ex.id }) }}}">Editer</a></th>
					<th><a href="{{ path('biblio_general_deleteexemplaire',{ 'id':ex.id }) }}}">Supprimer</a></th>
				</tr>
			{% endfor %}
		{% endif %}
	</tbody>
</table>

{% endblock %}