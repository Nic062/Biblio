{% extends '::base.html.twig' %}
{% block title %}Messages{% endblock %}
{% block body %}


<div class="panel panel-primary filterable">
            <div class="panel-heading">
                <h3 class="panel-title"><b>Messages</b></h3>
                <div class="pull-right">
                    <button class="btn btn-default btn-xs btn-filter"><span class="glyphicon glyphicon-filter"></span> Recherche par filtres</button>
                </div>
            </div>

	<table class="table table-striped table-hover">
		<thead>
	        <tr class="filters">
	            <th><input type="text" class="form-control" placeholder="##" disabled></th>
	            <th><input type="text" class="form-control" placeholder="Nom" disabled></th>
	            <th><input type="text" class="form-control" placeholder="PrÃ©nom" disabled></th>
	            <th><input type="text" class="form-control" placeholder="Email" disabled></th>
	            <th><input type="text" class="form-control" placeholder="Message" disabled></th>
	            <th>Supprimer</th>
	        </tr>
	    </thead>
		<tbody>
			{% if listMsg is not empty %}
				{% for msg in listMsg %}
					<tr>
						<td><b><a href="{{ path('biblio_general_showmessagecontact',{ 'id':msg.id }) }}}">{{ msg.id }}</a></b></td>
						<td>{{ msg.nom }}</td>
						<td>{{ msg.prenom }}</td>
						<td>{{ msg.email }}</td>
						<td>{{ msg.message | slice(0, 20)}}</td>
						<td><b><a href="{{ path('biblio_general_deletemessagecontact',{ 'id':msg.id }) }}}">Supprimer</a></b></td>
					</tr>
				{% endfor %}
			{% endif %}
		</tbody>
	</table>
</div>



{% endblock %}