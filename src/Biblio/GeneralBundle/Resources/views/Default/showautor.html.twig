{% extends '::base.html.twig' %}
{% block title %}{{autor.nom}}{% endblock %}
{% block body %}

<p>Bonjour, je m'appelle <b>{{autor.prenom}} {{autor.nom}}</b> et je suis né en <b>{{autor.naissance|date('Y')}}</b> ! Je suis auteur de : </p>

<table class="table table-striped table-hover">
	<thead>
		<tr>
			<th>##</th>
			<th>Type de livre</th>
			<th>Titre</th>
			<th>Année</th>
			<th>Résumé</th>
		</tr>
	</thead>
	<tbody>
		{% if autor.livres is not empty %}
			{% for livre in autor.livres %}
				<tr>
					<th><a href="{{ path('biblio_general_showlivre',{ 'id':livre.id }) }}}">{{ livre.id }}</a></th>
					<td>{{ livre.typeLivre.libelle }}</td>
					<td>{{ livre.titre }}</td>
					<td>{{ livre.annee }}</td>
					<td>{{ livre.resume | slice(0, 50) }}</td>
				</tr>
			{% endfor %}
		{% endif %}
	</tbody>
</table>

{% endblock %}