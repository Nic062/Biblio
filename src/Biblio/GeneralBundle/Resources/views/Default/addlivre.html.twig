{% extends '::base.html.twig' %}
{% block title %}Ajouter un livre{% endblock %}
{% block body %}
 {% block stylesheet %}
    {% if form is defined %}
      {{ form_stylesheet(form) }}
    {% endif %}
  {% endblock %}
  {% block scripts %}
    {% if form is defined %}
				<script src="http://code.jquery.com/jquery-1.11.2.min.js"></script>

		<script src="{{ asset('js/jquery-ui/jquery-ui2.js') }}"></script>

	  <script type="text/javascript">
        tinymce.init({
            language : 'fr_FR',
        });
    </script>
      {{ form_javascript(form) }}
    {% endif %}
  {% endblock %}
<script src="{{ asset('js/isbn.js') }}"></script>


<h3>Nouveau livre : </h3>

<div class="well">
	{{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
		{{ form_errors(form) }}
		
		<div class="form-group form-inline">
			{{ form_label(form.isbn, "ISBN", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
			<div class="col-sm-4">
				{{ form_widget(form.isbn, {'attr': {'class': 'form-control'}}) }}    
				{{ form_widget(form.searchisbn, {'attr': {'class': 'btn btn-warning'}, 'label': 'Recherche par ISBN'}) }}
			</div>
		</div>

		<div class="form-group">
			{{ form_label(form.titre, "Titre", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
			<div class="col-sm-4">
				{{ form_widget(form.titre, {'attr': {'class': 'form-control'}}) }}
			</div>
		</div>

		<div class="form-group">
			{{ form_label(form.auteurs, "Auteurs", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
			<div class="col-sm-4">
				{{ form_widget(form.auteurs, {'attr': {'class': 'form-control'}}) }}
			</div>
		</div>

		<div class="form-group">
			{{ form_label(form.annee, "Annee", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
			<div class="col-sm-4">
				{{ form_widget(form.annee, {'attr': {'class': 'form-control'}}) }}
			</div>
		</div>

		<div class="form-group">
			{{ form_label(form.resume, "Resume", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
			<div class="col-sm-4">
				{{ form_widget(form.resume, {'attr': {'class': 'form-control'}}) }}
			</div>
		</div>

		<div class="form-group">
			{{ form_label(form.typelivre, "Type du livre", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
			<div class="col-sm-4">
				{{ form_widget(form.typelivre, {'attr': {'class': 'form-control'}}) }}
			</div>
		</div>

		{{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'}, 'label': 'Ajouter le livre'}) }}
		{{ form_rest(form) }}
  {{ form_end(form) }}
</div>

{% endblock %}