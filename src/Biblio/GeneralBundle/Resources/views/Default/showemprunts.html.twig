{% extends '::base.html.twig' %}
{% block title %}Liste des emprunts{% endblock %}
{% block body %}

<table class="table table-striped table-hover">
	<thead>
		<tr>
			<th>##</th>
			<th>Emprunteur</th>
			<th>Exemplaire</th>
			<th>Date d'emprunt</th>
			<th>DÃ©lais d'emprunt</th>
			<th>Modifier</th>
			<th>Supprimer</th>
		</tr>
	</thead>
	<tbody>
		{% if listEmprunts is not empty %}
			{% for emprunt in listEmprunts %}
				<tr>
					<th>{{ emprunt.id }}</th>
					<td>{{ emprunt.inscrit.prenom }} {{ emprunt.inscrit.nom }}</td>
					<td>{{ emprunt.exemplaire.livre.titre }} ({{ emprunt.exemplaire.edition.nom }})</td>
					<td>{{ emprunt.date|date("d/m/Y") }}</td>
					<td>{{ emprunt.delais }}</td>
					<th><a href="{{ path('biblio_general_editemprunt',{ 'id':emprunt.id }) }}}">Editer</a></th>
					<th><a href="{{ path('biblio_general_deleteemprunt',{ 'id':emprunt.id }) }}}">Supprimer</a></th>
				</tr>
			{% endfor %}
		{% endif %}
	</tbody>
</table>

{% endblock %}