{% extends '::base.html.twig' %}
{% block title %}Liste des emprunts{% endblock %}
{% block body %}

<div class="panel panel-primary filterable">
            <div class="panel-heading">
                <h3 class="panel-title">Liste des emprunts :</h3>
                <div class="pull-right">
                    <button class="btn btn-default btn-xs btn-filter"><span class="glyphicon glyphicon-filter"></span> Recherche par filtres</button>
                </div>
            </div>

	<table class="table table-striped table-hover">
		<thead>
	        <tr class="filters">
	            <th><input type="text" class="form-control" placeholder="##" disabled></th>
	            <th><input type="text" class="form-control" placeholder="Emprunteur" disabled></th>
	            <th><input type="text" class="form-control" placeholder="Exemplaire" disabled></th>
	            <th><input type="text" class="form-control" placeholder="Date d'emprunt" disabled></th>
	            <th><input type="text" class="form-control" placeholder="DÃ©lai d'emprunt" disabled></th>
	            <th>Modifier</th>
				<th>Supprimer</th>
	        </tr>
	    </thead>
		<tbody>
		{% if listEmprunts is not empty %}
			{% for emprunt in listEmprunts %}
				<tr>
					<td><b>{{ emprunt.id }}</b></td>
					<td>{{ emprunt.inscrit.prenom }} {{ emprunt.inscrit.nom }}</td>
					<td>{{ emprunt.exemplaire.livre.titre }} ({{ emprunt.exemplaire.edition.nom }})</td>
					<td>{{ emprunt.date|date("d/m/Y") }}</td>
					<td>{{ emprunt.delais }}</td>
					<th><a href="{{ path('biblio_general_editemprunt',{ 'id':emprunt.id }) }}}">Editer</a></th>
					<th><a href="{{ path('biblio_general_deleteemprunt',{ 'id':emprunt.id }) }}}">Supprimer</a></th>
				</tr>
			{% endfor %}
		{% endif %}
	</tbody>
	</table>
</div>

{% endblock %}