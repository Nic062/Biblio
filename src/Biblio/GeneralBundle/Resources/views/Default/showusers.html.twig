{% extends '::base.html.twig' %}
{% block title %}Liste des membres{% endblock %}
{% block body %}

<table class="table table-striped table-hover">
	<thead>
		<tr>
			<th>##</th>
			<th>Nom</th>
			<th>Prénom</th>
			<th>Date de naissance</th>
			<th>Adresse</th>
			<th>Ville</th>
			<th>Code postal</th>
			<th>Email</th>
			<th>Téléphone</th>
			<th>Modifier</th>
			<th>Supprimer</th>
		</tr>
	</thead>
	<tbody>
		{% if listMembers is not empty %}
			{% for member in listMembers %}
				<tr>
					<th><a href="{{ path('biblio_general_showuser',{ 'id':member.id }) }}}">{{ member.id }}</a></th>
					<td>{{ member.nom }}</td>
					<td>{{ member.prenom }}</td>
					<td>{{ member.naissance|date("d/m/Y") }}</td>
					<td>{{ member.rue }}</td>
					<td>{{ member.ville }}</td>
					<td>{{ member.cp }}</td>
					<td>{{ member.email }}</td>
					<td>{{ member.tel }}</td>
					<th><a href="{{ path('biblio_general_edituser',{ 'id':member.id }) }}}">Editer</a></th>
					<th><a href="{{ path('biblio_general_deleteuser',{ 'id':member.id }) }}}">Supprimer</a></th>
				</tr>
			{% endfor %}
		{% endif %}
	</tbody>
</table>

{% endblock %}