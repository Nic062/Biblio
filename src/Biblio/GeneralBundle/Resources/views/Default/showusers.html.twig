{% extends '::base.html.twig' %}
{% block title %}Liste des membres{% endblock %}
{% block body %}

<div class="panel panel-primary filterable">
    <div class="panel-heading">
        <h3 class="panel-title">Liste des livres :</h3>
        <div class="pull-right">
            <button class="btn btn-default btn-xs btn-filter"><span class="glyphicon glyphicon-filter"></span> Recherche par filtres</button>
        </div>
    </div>
    <table class="table">
        <thead>
            <tr class="filters">
                <th><input type="text" class="form-control" placeholder="##" disabled></th>
                <th><input type="text" class="form-control" placeholder="Nom" disabled></th>
                <th><input type="text" class="form-control" placeholder="Prénom" disabled></th>
                <th><input type="text" class="form-control" placeholder="Date de naissance" disabled></th>
                <th><input type="text" class="form-control" placeholder="Adresse" disabled></th>
                <th><input type="text" class="form-control" placeholder="Ville" disabled></th>
                <th><input type="text" class="form-control" placeholder="Code postal" disabled></th>
                <th><input type="text" class="form-control" placeholder="Email" disabled></th>
                <th><input type="text" class="form-control" placeholder="Téléphone" disabled></th>
                <th>Modifier</th>
                <th>Supprimer</th>
            </tr>
        </thead>
        <tbody>
		{% if listMembers is not empty %}
			{% for member in listMembers %}
				<tr>
					<td><b><a href="{{ path('biblio_general_showuser',{ 'id':member.id }) }}}">{{ member.id }}</a></b></td>
					<td>{{ member.nom }}</td>
					<td>{{ member.prenom }}</td>
					<td>{{ member.naissance|date("d/m/Y") }}</td>
					<td>{{ member.rue }}</td>
					<td>{{ member.ville }}</td>
					<td>{{ member.cp }}</td>
					<td>{{ member.email }}</td>
					<td>{{ member.tel }}</td>
					<th><a href="{{ path('biblio_general_edituser',{ 'id':member.id }) }}}">Editer</a></th>
					<th><a href="{{ path('biblio_general_deleteuser',{ 'id':member.id }) }}}">Supprimer</a></th>
				</tr>
			{% endfor %}
		{% endif %}
	</tbody>
    </table>
</div>

{% endblock %}